<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".act4">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_light"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="Conditions d'utilisation"
        android:textAlignment="center"
        android:textColor="#03A9F4"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultez nos conditions d'utilisation pour une expérience transparente et sécurisée avec notre application Gestion d'Étudiant. Votre satisfaction et votre confidentialité sont notre priorité
."
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="10sp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30sp"
        android:text="Acceptation des Conditions :\nEn utilisant cette application, vous acceptez les conditions d'utilisation énoncées, engageant ainsi votre conformité avec ces termes.\n\nResponsabilité de l'Utilisateur :\nLes utilisateurs sont tenus de maintenir la confidentialité de leurs identifiants de connexion et de signaler toute utilisation non autorisée.\n"
        android:textAlignment="viewStart"
        android:textSize="15sp"
/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        app:srcCompat="@drawable/opa" />
    <Button
        android:id="@+id/b44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="retourner" />

</LinearLayout>