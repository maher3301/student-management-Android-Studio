<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="367dp"
        app:srcCompat="@drawable/avatar3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestion des Etudiants\nGDE"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenue dans l'avenir de la gestion étudiante - simplifiez, organisez et optimisez votre expérience académique avec notre application Gestion d'Étudiant."
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"

        />

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Créer un compte"
        app:icon="@android:drawable/ic_lock_idle_lock" />


    <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se connecter"
        app:icon="@android:drawable/ic_menu_rotate" />
    <Button
        android:id="@+id/b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gérer étudiant"
        app:icon="@android:drawable/ic_menu_rotate" />

    <Button
        android:id="@+id/b4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="À propos"
        app:icon="@android:drawable/ic_dialog_info" />

    <Button
        android:id="@+id/b5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Réglementations "
        app:icon="@android:drawable/ic_menu_search" />
</LinearLayout>
