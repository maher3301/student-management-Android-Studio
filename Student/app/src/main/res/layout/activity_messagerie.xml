<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".suivre">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_blue_light"
            />

        <!-- Champ de saisie du message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Espace communication"
            android:layout_marginTop="10sp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacter le parent de l'étudiant par téléphone, message sur téléphone ou par e-mail."

            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"

            />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/par" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Champ de saisie du message"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:id="@+id/tt">
        </TextView>
        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez votre message"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="6" />

        <!-- Boutons pour contacter le parent -->
        <Button
            android:id="@+id/buttonCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appeler le parent" />

        <Button
            android:id="@+id/buttonSendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Envoyer un message au parent" />

        <Button
            android:id="@+id/buttonSendEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Envoyer un e-mail au parent" />



        <Button
            android:id="@+id/bt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="retourner"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="230dp" />


</LinearLayout>